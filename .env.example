# Environment Configuration
NODE_ENV=development
PORT=3000

# Security
JWT_SECRET=your-jwt-secret-key-here

# Database (Optional - using in-memory storage by default)
DATABASE_URL=postgresql://user:password@localhost:5432/suntyn_ai

# API Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload Limits
MAX_FILE_SIZE=10485760
UPLOAD_TIMEOUT=30000

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,https://*.replit.app

# Static File Configuration
STATIC_DIR=./static
FILE_EXPIRY_HOURS=1

# Health Check Configuration
HEALTH_CHECK_INTERVAL=30000